<!-- app/views/categories/_form.html.erb -->

<%= form_with(model: @category, url: category_path(@category), method: :patch, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div class="actions flex space-x-4 justify-between">
  <%= form.submit 'Update Category', class: 'btn btn-primary' %>

    <%= button_to 'Delete Category', @category, method: :delete, data: { confirm: 'Are you sure?', "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %>
  </div>
</div>
<% end %>
