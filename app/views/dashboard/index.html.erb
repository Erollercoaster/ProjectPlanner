<div class="flex justify-center items-center h-screen">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-gray-200 p-4 rounded-md">
      <h2 class="text-lg font-semibold mb-2">Total Tasks</h2>
      <p><%= @total_tasks_count %></p>
    </div>
    
    <div class="bg-gray-200 p-4 rounded-md">
      <h2 class="text-lg font-semibold mb-2">Most Urgent Task</h2>
      <p><%= @most_urgent_task.title %></p>
      <p><%= @most_urgent_task.due_date %></p>
    </div>
    
    <div class="col-span-1 md:col-span-2 bg-white p-4 rounded-md">
      <h2 class="text-lg font-semibold mb-4">All Tasks</h2>
      <table class="w-full border-collapse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Due Date</th>
            
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
               <td><%= task.category.name if task.category.present? %></td>
              <td><%= task.due_date %></td>
            </tr>
          <% end %>
     </tbody>
      </table>
    </div>
  </div>
</div>
