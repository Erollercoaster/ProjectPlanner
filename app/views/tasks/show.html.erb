<div class="flex items-center justify-center h-screen">
  <div class="w-25 bg-white rounded-lg p-8 shadow-md">
    <h1 class="mb-4 text-lg font-bold"><%= @task.title %></h1>
    <p class="mb-4"><%= @task.description %></p>
    
    <div class="flex justify-center gap-5">
      <%= link_to "Back", category_path(@category), class: "btn btn-submit rounded-md px-4 py-2 bg-blue-500 text-white hover:bg-blue-600 text-sm" %>
      <%= link_to "Edit Task", edit_category_task_path(@category, @task), class: "btn btn-submit rounded-md px-4 py-2 bg-blue-500 text-white hover:bg-blue-600 text-sm" %>
      <%= button_to "Delete Task", category_task_path(@category, @task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-close rounded-md px-4 py-2 bg-red-500 hover:bg-red-600 text-white text-sm" %>
    </div>
  </div>
</div>
